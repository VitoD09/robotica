Algoritmo questão 1:

#include <iostream>
#include <string>

using namespace std;

int main()
{
    int idade = 16;
    std::string nome = "jao";
    char carac = 'b';
    float num1 = 1.77865281;
    bool boleano = true;
    double num2 = 8.82738474;
    short int num3 = 32767;
    long int num4 = 2147483647;
    long long int num5 = 9223372036854775807;
    unsigned int num6 = 4294967295;

    std::cout << "tipo int: " << idade << std::endl;
    std::cout << "tipo string: " << nome << std::endl;
    std::cout << "tipo char: " << carac << std::endl;
    std::cout << "tipo float: " << num1 << std::endl;
    std::cout << "tipo bool: " << boleano << std::endl;
    std::cout << "tipo double: " << num2 << std::endl;
    std::cout << "tipo short: " << num3 << std::endl;
    std::cout << "tipo long: " << num4 << std::endl;
    std::cout << "tipo long long: " << num5 << std::endl;
    std::cout << "tipo unsigned int: " << num6 << std::endl;

    return 0;
}

Algoritmo questão 2:

#include <iostream>
#include <cmath>

using namespace std;

int main()
{
 int num1, num2;
 cout << "informe um numero: ";
 cin >> num1;
 cout << "informe um numero: ";
 cin >> num2;

 cout << "Soma: " << num1 + num2 <<endl;
 cout << "Subtracao: " << num1 - num2 <<endl;
 cout << "Multiplicacao: " <<num1 * num2 <<endl;
 cout << "Divisao: " <<num1 / num2 <<endl;
 cout << "Potencia do primeiro numero: " << num1 * num1;

 return 0;
}

Algoritmo questão 3:
// Example program
#include <iostream>
using namespace std;

int main()
{
    float raio, area;
    const float PI = 3.14;
  
    cout << "informe o valor do raio do circulo"<<endl ;
    cin >> raio;
    area = PI * raio*raio;
    
    cout <<"Area do circulo e "<< area <<endl;
    return 0;
}


Algoritmo questão 4:
// Example program
#include <iostream>
using namespace std;

int main()
{
    int num1 = 10, num4= 3;
    float num2 = 10, num5= 3;
    double num3 = 10, num6 = 3;
    
    cout<< "int "<< num1/num4<<endl;
    cout<< "float "<< num2/num5<<endl;
    cout<< "double "<< num3/num6<<endl;
    
    return 0;
}


algoritmo questao 5:
#include <iostream>
#include <string>
using namespace std;

int main() {
    std::string nome;
    int idade;
    
    cout<<"Informe o seu nome: ";
    cin>> nome ;
    cout<<"Informe sua idade: ";
    cin>> idade;
    
    cout<< nome<<" tem "<<idade<<" anos de idade."<<endl;

    return 0;
}



algoritmo questao 6:
#include <iostream>
using namespace std;

int parametro(int a, int b) {
    return a + b;
}

int main() {
    int num1, num2;
   
    cout << "Digite o primeiro numero: " ;
    cin >> num1;

    cout << "Digite o segundo numero: ";
    cin >> num2;

    int soma = parametro(num1, num2);

    cout << "A soma dos numeros é " << soma << endl;

    return 0;
}


algoritmo questao 7:
#include <iostream>
using namespace std ;

  void ehpar (int num1){
      if (num1 % 2 == 0){
          cout<< "true "<<endl;
      }else{
          cout<<" false"<< endl;
      }
  }

int main() {
    int num;
    
    cout<<" informe um numero: "<<endl;
    cin>> num;
    
    ehpar(num);
    return 0;
}


